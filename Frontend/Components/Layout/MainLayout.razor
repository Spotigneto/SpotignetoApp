@inherits LayoutComponentBase

<div class="page-wrapper">
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main class="main-content">
            <div class="top-bar">
            </div>

            <article class="content">
                @Body
            </article>
        </main>

        <aside class="widgets-sidebar">
            <div class="widgets-header">
                <h3>Widgets</h3>
            </div>

            <div class="widgets-content">
                <!-- New Releases Widget -->
                <div class="widget-block">
                    <h4 class="widget-title">New Releases</h4>
                    <div class="widget-list">
                        <div class="release-item">
                            <div class="release-cover"
                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                            <div class="release-info">
                                <div class="release-name">Looking back</div>
                                <div class="release-artist">Maro</div>
                            </div>
                            <div class="release-duration">3:45</div>
                        </div>
                        <div class="release-item">
                            <div class="release-cover"
                                style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);"></div>
                            <div class="release-info">
                                <div class="release-name">High On Life</div>
                                <div class="release-artist">Martin Garrix, Bonn</div>
                            </div>
                            <div class="release-duration">2:41</div>
                        </div>
                        <div class="release-item">
                            <div class="release-cover"
                                style="background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);"></div>
                            <div class="release-info">
                                <div class="release-name">Bad Guy</div>
                                <div class="release-artist">Billie Eilish</div>
                            </div>
                            <div class="release-duration">3:11</div>
                        </div>
                    </div>
                    <button class="see-more-btn">See More</button>
                </div>

                <!-- Stats Widget -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-label">Daily Usage</div>
                        <div class="stat-value">17.2 <span class="stat-unit">minutes</span></div>
                        <div class="stat-change positive">+27 minutes</div>
                    </div>
                </div>

                <!-- Queue Widget -->
                <div class="widget-block">
                    <h4 class="widget-title">Queue</h4>
                    <div class="widget-list">
                        <div class="queue-item">
                            <div class="queue-icon">
                                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                                    <line x1="2" y1="4" x2="14" y2="4" stroke="currentColor" stroke-width="1.5" />
                                    <line x1="2" y1="8" x2="14" y2="8" stroke="currentColor" stroke-width="1.5" />
                                    <line x1="2" y1="12" x2="14" y2="12" stroke="currentColor" stroke-width="1.5" />
                                </svg>
                            </div>
                            <div class="queue-info">
                                <div class="queue-name">Nightlight</div>
                                <div class="queue-artist">ILLENIUM, Annika Wells</div>
                            </div>
                            <div class="queue-duration">3:23</div>
                        </div>
                        <div class="queue-item">
                            <div class="queue-icon">
                                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                                    <line x1="2" y1="4" x2="14" y2="4" stroke="currentColor" stroke-width="1.5" />
                                    <line x1="2" y1="8" x2="14" y2="8" stroke="currentColor" stroke-width="1.5" />
                                    <line x1="2" y1="12" x2="14" y2="12" stroke="currentColor" stroke-width="1.5" />
                                </svg>
                            </div>
                            <div class="queue-info">
                                <div class="queue-name">A moment apart</div>
                                <div class="queue-artist">ODESZA</div>
                            </div>
                            <div class="queue-duration">3:33</div>
                        </div>
                        <div class="queue-item">
                            <div class="queue-icon">
                                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                                    <line x1="2" y1="4" x2="14" y2="4" stroke="currentColor" stroke-width="1.5" />
                                    <line x1="2" y1="8" x2="14" y2="8" stroke="currentColor" stroke-width="1.5" />
                                    <line x1="2" y1="12" x2="14" y2="12" stroke="currentColor" stroke-width="1.5" />
                                </svg>
                            </div>
                            <div class="queue-info">
                                <div class="queue-name">Say My Name</div>
                                <div class="queue-artist">ODESZA</div>
                            </div>
                            <div class="queue-duration">3:59</div>
                        </div>
                    </div>
                    <button class="see-more-btn">See More</button>
                </div>
            </div>
        </aside>
    </div>

    <!-- Player Bar -->
    <div class="player-bar">
        <div class="player-left">
            <div class="now-playing-cover" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
            <div class="now-playing-info">
                <div class="now-playing-title">Late Night</div>
                <div class="now-playing-artist">ODESZA</div>
            </div>
            <button class="player-action-btn liked">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path
                        d="M8 14s-6-4.5-6-8c0-2 1.5-3.5 3.5-3.5 1.5 0 2.5 1 2.5 1s1-1 2.5-1C12.5 2.5 14 4 14 6c0 3.5-6 8-6 8z" />
                </svg>
            </button>
            <button class="player-action-btn">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor">
                    <circle cx="8" cy="8" r="6" stroke-width="1.5" />
                    <path d="M8 5v6M5 8h6" stroke-width="1.5" />
                </svg>
            </button>
        </div>

        <div class="player-center">
            <div class="player-controls">
                <button class="control-btn shuffle">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M2 5h8l2-2 2 2M2 11h8l2 2 2-2M10 5L2 11M10 11L2 5" stroke="currentColor"
                            stroke-width="1.5" fill="none" />
                    </svg>
                </button>
                <button class="control-btn prev">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M3 3v10M13 8L5 3v10l8-5z" />
                    </svg>
                </button>
                <button class="control-btn play">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <rect x="5" y="3" width="2" height="10" rx="1" />
                        <rect x="9" y="3" width="2" height="10" rx="1" />
                    </svg>
                </button>
                <button class="control-btn next">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M13 3v10M3 8l8 5V3l-8 5z" />
                    </svg>
                </button>
                <button class="control-btn repeat">
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor">
                        <path d="M3 8h10M10 5l3 3-3 3M13 8H3M6 11l-3-3 3-3" stroke-width="1.5" />
                    </svg>
                </button>
            </div>
            <div class="player-progress">
                <span class="time-current">1:42</span>
                <div class="progress-bar-container">
                    <div class="progress-bar">
                        <div class="progress-bar-fill" style="width: 48%;">
                            <div class="progress-handle"></div>
                        </div>
                    </div>
                </div>
                <span class="time-total">3:52</span>
            </div>
        </div>

        <div class="player-right">
            <button class="control-btn">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M8 3L6 5h4l-2-2zM8 13l2-2H6l2 2zM3 6v4l2-2-2-2zM13 6v4l-2-2 2-2z" stroke="currentColor"
                        stroke-width="1" />
                </svg>
            </button>
            <button class="control-btn">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <rect x="3" y="3" width="10" height="10" rx="2" stroke="currentColor" stroke-width="1.5"
                        fill="none" />
                    <circle cx="6" cy="6" r="1" fill="currentColor" />
                    <circle cx="10" cy="10" r="1" fill="currentColor" />
                </svg>
            </button>
            <button class="control-btn volume">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                    <path d="M8 4L5 7H2v2h3l3 3V4zM11 8c0-1-0.5-2-1.5-2.5M12.5 8c0-2-1-3.5-2.5-4.5" />
                </svg>
            </button>
            <div class="volume-bar-container">
                <div class="volume-bar">
                    <div class="volume-bar-fill" style="width: 70%;"></div>
                </div>
            </div>
            <button class="control-btn fullscreen">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor">
                    <path d="M3 3h3M3 3v3M13 3h-3M13 3v3M3 13h3M3 13v-3M13 13h-3M13 13v-3" stroke-width="1.5" />
                </svg>
            </button>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
        overflow: hidden;
    }

    .page-wrapper {
        height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        padding: 8px;
        padding-bottom: 0;
    }

    .page {
        display: flex;
        height: calc(100vh - 98px);
        background: #121212;
        border-radius: 12px 12px 0 0;
        overflow: hidden;
    }

    .sidebar {
        width: 240px;
        height: 100%;
        background-color: #000000;
        flex-shrink: 0;
        border-radius: 12px 0 0 0;
        display: flex;
        flex-direction: column;
    }

    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        background: linear-gradient(180deg, rgba(40, 40, 40, 0.9) 0%, #121212 300px);
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 24px;
        background-color: transparent;
    }

    .content {
        flex: 1;
        overflow-y: auto;
        padding: 0 24px 24px 24px;
    }

    .widgets-sidebar {
        width: 300px;
        background-color: #1a1a1a;
        display: flex;
        flex-direction: column;
        border-left: 1px solid #282828;
    }

    .widgets-header {
        padding: 20px 20px 16px 20px;
        border-bottom: 1px solid #282828;
    }

    .widgets-header h3 {
        color: #fff;
        font-size: 16px;
        font-weight: 700;
    }

    .widgets-content {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    .widget-block {
        margin-bottom: 20px;
        background-color: #282828;
        border-radius: 8px;
        padding: 16px;
    }

    .widget-title {
        color: #fff;
        font-size: 13px;
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: 0.1em;
        text-transform: uppercase;
    }

    .widget-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .release-item,
    .queue-item {
        display: flex;
        align-items: center;
        gap: 12px;
        color: #fff;
    }

    .release-cover {
        width: 48px;
        height: 48px;
        background-color: #333;
        border-radius: 6px;
        flex-shrink: 0;
    }

    .release-info,
    .queue-info {
        flex: 1;
        min-width: 0;
    }

    .release-name,
    .queue-name {
        font-size: 13px;
        font-weight: 600;
        color: #fff;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 4px;
    }

    .release-artist,
    .queue-artist {
        font-size: 11px;
        color: #b3b3b3;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .release-duration,
    .queue-duration {
        font-size: 12px;
        color: #b3b3b3;
        flex-shrink: 0;
    }

    .stats-grid {
        margin-bottom: 20px;
    }

    .stat-card {
        background-color: #282828;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 20px;
    }

    .stat-label {
        color: #b3b3b3;
        font-size: 10px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 8px;
    }

    .stat-value {
        color: #fff;
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 4px;
    }

    .stat-unit {
        font-size: 11px;
        font-weight: 400;
        color: #b3b3b3;
    }

    .stat-change {
        font-size: 11px;
        font-weight: 500;
    }

    .stat-change.positive {
        color: #1db954;
    }

    .network-stats {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .network-stat {
        font-size: 13px;
        font-weight: 600;
        color: #fff;
    }

    .network-stat.download {
        color: #1db954;
    }

    .network-stat.upload {
        color: #ef4444;
    }

    .network-ping {
        font-size: 11px;
        color: #b3b3b3;
        margin-top: 4px;
    }

    .queue-icon {
        color: #b3b3b3;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .see-more-btn {
        width: 100%;
        padding: 10px;
        margin-top: 12px;
        background-color: transparent;
        border: 1px solid #535353;
        border-radius: 6px;
        color: #fff;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .see-more-btn:hover {
        background-color: #282828;
        border-color: #727272;
        transform: scale(1.02);
    }

    .chart-widget {
        background-color: #1a1a1a;
        border-radius: 8px;
        padding: 16px;
    }

    .chart-labels {
        display: flex;
        justify-content: space-around;
        margin-top: 8px;
        color: #b3b3b3;
        font-size: 10px;
        font-weight: 600;
    }

    /* Player Bar */
    .player-bar {
        height: 90px;
        background-color: #181818;
        border-top: 1px solid #282828;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 16px;
        gap: 16px;
    }

    .player-left {
        display: flex;
        align-items: center;
        gap: 14px;
        flex: 1;
        min-width: 180px;
        max-width: 30%;
    }

    .now-playing-cover {
        width: 56px;
        height: 56px;
        background-color: #333;
        border-radius: 4px;
        flex-shrink: 0;
    }

    .now-playing-info {
        flex: 1;
        min-width: 0;
    }

    .now-playing-title {
        color: #fff;
        font-size: 14px;
        font-weight: 500;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 4px;
    }

    .now-playing-artist {
        color: #b3b3b3;
        font-size: 11px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .player-action-btn {
        background: transparent;
        border: none;
        color: #b3b3b3;
        cursor: pointer;
        padding: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s;
    }

    .player-action-btn:hover {
        color: #fff;
    }

    .player-action-btn.liked {
        color: #1db954;
    }

    .player-center {
        flex: 1;
        max-width: 722px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

    .player-controls {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .control-btn {
        background: transparent;
        border: none;
        color: #b3b3b3;
        cursor: pointer;
        padding: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .control-btn:hover {
        color: #fff;
        transform: scale(1.1);
    }

    .control-btn.play {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-color: #fff;
        color: #000;
        padding: 0;
    }

    .control-btn.play:hover {
        transform: scale(1.06);
        background-color: #fff;
    }

    .player-progress {
        display: flex;
        align-items: center;
        gap: 12px;
        width: 100%;
        max-width: 100%;
    }

    .time-current,
    .time-total {
        color: #b3b3b3;
        font-size: 11px;
        font-weight: 500;
        min-width: 40px;
        font-variant-numeric: tabular-nums;
    }

    .time-total {
        text-align: right;
    }

    .progress-bar-container {
        flex: 1;
        position: relative;
        height: 12px;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .progress-bar {
        width: 100%;
        height: 4px;
        background-color: #4d4d4d;
        border-radius: 2px;
        position: relative;
    }

    .progress-bar-fill {
        height: 100%;
        background-color: #fff;
        border-radius: 2px;
        position: relative;
    }

    .progress-handle {
        position: absolute;
        right: -6px;
        top: 50%;
        transform: translateY(-50%);
        width: 12px;
        height: 12px;
        background-color: #fff;
        border-radius: 50%;
        opacity: 0;
        transition: opacity 0.2s;
    }

    .progress-bar-container:hover .progress-handle {
        opacity: 1;
    }

    .progress-bar-container:hover .progress-bar {
        height: 4px;
        background-color: #535353;
    }

    .progress-bar-container:hover .progress-bar-fill {
        background-color: #1db954;
    }

    .player-right {
        display: flex;
        align-items: center;
        gap: 8px;
        flex: 1;
        justify-content: flex-end;
        min-width: 180px;
        max-width: 30%;
    }

    .volume-bar-container {
        width: 93px;
        height: 12px;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .volume-bar {
        width: 100%;
        height: 4px;
        background-color: #4d4d4d;
        border-radius: 2px;
        position: relative;
    }

    .volume-bar-fill {
        height: 100%;
        background-color: #fff;
        border-radius: 2px;
    }

    .volume-bar-container:hover .volume-bar {
        background-color: #535353;
    }

    .volume-bar-container:hover .volume-bar-fill {
        background-color: #1db954;
    }

    /* Scrollbar */
    .content::-webkit-scrollbar,
    .widgets-content::-webkit-scrollbar {
        width: 10px;
    }

    .content::-webkit-scrollbar-track,
    .widgets-content::-webkit-scrollbar-track {
        background: transparent;
    }

    .content::-webkit-scrollbar-thumb,
    .widgets-content::-webkit-scrollbar-thumb {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 5px;
    }

    .content::-webkit-scrollbar-thumb:hover,
    .widgets-content::-webkit-scrollbar-thumb:hover {
        background-color: rgba(255, 255, 255, 0.3);
    }
</style>