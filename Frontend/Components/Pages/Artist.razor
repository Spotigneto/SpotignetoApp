@page "/artist"

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden; /* ðŸ”¥ nessuna barra di scorrimento */
        background: linear-gradient(180deg, #1a1a1a 0%, #000000 100%);
        color: white;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    .artist-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        height: 100%;
        padding-top: 4rem;
        text-align: center;
    }

    .artist-header {
        margin-bottom: 2rem;
    }

    .artist-type {
        color: #b3b3b3;
        font-size: 1rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        margin-bottom: 0.3rem;
    }

    .artist-name {
        font-size: 3.2rem;
        font-weight: 800;
        margin: 0;
        background: linear-gradient(to right, #ffffff, #b3b3b3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .artist-followers {
        color: #b3b3b3;
        margin-top: 0.5rem;
        font-size: 1rem;
    }

    .btn-follow {
        background-color: #1db954;
        color: black;
        border: none;
        padding: 0.6rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 1.5rem;
    }

    .btn-follow:hover {
        background-color: #1ed760;
        transform: scale(1.05);
    }

    /* ðŸ”¹ Sezioni centrali orizzontali e larghe */
    .artist-content {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 2rem;
        margin-top: 3rem;
        width: 100%;
        flex-wrap: wrap;
    }

    .artist-section {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(6px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem 3rem;
        width: 40%; /* piÃ¹ largo e armonioso */
        min-width: 350px;
        text-align: left;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .artist-section:hover {
        box-shadow: 0 0 30px rgba(29, 185, 84, 0.25);
        transform: translateY(-3px);
    }

    .artist-section h2 {
        font-size: 1.8rem;
        color: white;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 0.5rem;
        text-align: center;
    }

    .artist-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .artist-section li {
        color: #b3b3b3;
        padding: 0.6rem 0;
        border-bottom: 1px solid #282828;
        text-align: center;
        transition: color 0.3s ease;
    }

    .artist-section li:last-child {
        border-bottom: none;
    }

    .artist-section li:hover {
        color: #1db954;
    }
</style>

<div class="artist-wrapper">
    <div class="artist-header">
        <p class="artist-type">Verified Artist</p>
        <h1 class="artist-name">The Synthwaves</h1>
        <p class="artist-followers">1,234,567 monthly listeners</p>
        <button class="btn-follow">Follow</button>
    </div>

    <div class="artist-content">
