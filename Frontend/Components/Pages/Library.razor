@page "/library"
@rendermode InteractiveServer

<div class="library-page">
    <div class="library-container">
        <div class="library-content-area">
            <h1 class="page-title">Your Library</h1>

            <div class="tab-navigation">
                <button class="tab-button @GetActiveClass("playlists")" @onclick='@(() => ChangeSection("playlists"))'>
                    Playlists
                </button>

                <button class="tab-button @GetActiveClass("albums")" @onclick='@(() => ChangeSection("albums"))'>
                    Albums
                </button>

                <button class="tab-button @GetActiveClass("artists")" @onclick='@(() => ChangeSection("artists"))'>
                    Artists
                </button>
            </div>

