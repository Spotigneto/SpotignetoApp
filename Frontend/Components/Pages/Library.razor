                                <h2 class="section-title">Playlists</h2>
                                <div class="search-bar-container">
                                    <i class="bi bi-search"></i>
                                    <input type="text" class="search-input" placeholder="Cerca playlists..." />
                                </div>
                            </div>
                            <div class="content-grid">
                                <div class="library-card playlist-card">
                                    <div class="card-image-placeholder playlist-image">
                                        <i class="bi bi-music-note-list"></i>
                                    </div>
                                    <div class="card-details">
                                        <h3 class="card-title">My Favorites</h3>
                                        <p class="card-subtitle">Playlist • 45 canzoni</p>
                                    </div>
                                </div>
                                <div class="library-card playlist-card">
                                    <div class="card-image-placeholder playlist-image">
                                        <i class="bi bi-music-note-list"></i>
                                    </div>
                                    <div class="card-details">
                                        <h3 class="card-title">Workout Mix</h3>
                                        <p class="card-subtitle">Playlist • 32 canzoni</p>
                                    </div>
                                </div>
                                <div class="library-card playlist-card">
                                    <div class="card-image-placeholder playlist-image">
                                        <i class="bi bi-music-note-list"></i>
                                    </div>
