                <div class="playlist-type">Playlist</div>
                <div class="playlist-stats">
                    <span class="stat-number">42</span>
                    <span>songs</span>
                    <span class="stat-divider">•</span>
                    <span class="stat-number">2h</span>
                    <span class="stat-number">34min</span>
                </div>
            </div>
        </div>

        <!-- Playlist 2 -->
        <div class="playlist-card">
            <div class="playlist-color" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);"></div>
            <div class="playlist-info">
                <div class="playlist-type">Playlist</div>
                <div class="playlist-stats">
                    <span class="stat-number">30</span>
                    <span>songs</span>
                    <span class="stat-divider">•</span>
                    <span class="stat-number">2h</span>
                    <span class="stat-number">32min</span>
                </div>
            </div>
        </div>

        <!-- Playlist 3 -->
        <div class="playlist-card">
            <div class="playlist-color" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);"></div>
            <div class="playlist-info">
                <div class="playlist-type">Playlist</div>
                <div class="playlist-stats">
                    <span class="stat-number">38</span>
                    <span>songs</span>
                    <span class="stat-divider">•</span>
                    <span class="stat-number">2h</span>
                    <span class="stat-number">15min</span>
                </div>
            </div>
        </div>

        <!-- Playlist 4 -->
        <div class="playlist-card">
            <div class="playlist-color" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);"></div>
            <div class="playlist-info">
                <div class="playlist-type">Playlist</div>
                <div class="playlist-stats">
                    <span class="stat-number">50</span>
                    <span>songs</span>
                    <span class="stat-divider">•</span>
                    <span class="stat-number">3h</span>
                    <span class="stat-number">32min</span>
