@page "/library"

<div class="library-page">
    <div class="library-container">
        <div class="library-content-area">
            <h1 class="page-title">Your Library</h1>

            <div class="tab-navigation">
                <div class="tab-navigation">
                    <button class='tab-button @(ActiveSection == "playlists" ? "active" : "")'
                        @onclick="@(() => SetActiveSection("playlists"))">
                        Playlists
                    </button>

                    <button class='tab-button @(ActiveSection == "albums" ? "active" : "")'
                        @onclick="@(() => SetActiveSection("albums"))">
                        Albums
                    </button>

                    <button class='tab-button @(ActiveSection == "artists" ? "active" : "")'
                        @onclick="@(() => SetActiveSection("artists"))">
                        Artists
                    </button>
                </div>



            </div>

            <div class="sections-wrapper">
                <div class="section-panel @(ActiveSection == "playlists" ? "active" : "")">
                    <div class="search-bar-container">
                        <i class="bi bi-search"></i>
                        <input type="text" class="search-input" placeholder="Cerca playlists..." />
                    </div>
                    <h2 class="section-title">Playlists</h2>
                    <div class="content-grid">
                        <div class="library-card playlist-card">
                            <div class="card-details">
                                <h3 class="card-title">Nome Playlist</h3>
                                <p class="card-subtitle">Playlist • canzoni</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-panel @(ActiveSection == "albums" ? "active" : "")">
                    <div class="search-bar-container">
                        <i class="bi bi-search"></i>
                        <input type="text" class="search-input" placeholder="Cerca albums..." />
                    </div>
                    <h2 class="section-title">Albums</h2>
                    <div class="content-grid">
                        <div class="library-card album-card">
                            <div class="card-details">
                                <h3 class="card-title">Nome Album</h3>
                                <p class="card-subtitle">Album • Anno</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="section-panel @(ActiveSection == "artists" ? "active" : "")">
                    <div class="search-bar-container">
                        <i class="bi bi-search"></i>
                        <input type="text" class="search-input" placeholder="Cerca artisti..." />
                    </div>
                    <h2 class="section-title">Artists</h2>
                    <div class="content-grid">
                        <div class="library-card artist-card">
                            <div class="card-details">
                                <h3 class="card-title">Nome Artista</h3>
                                <p class="card-subtitle">Artista</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .library-page .library-container {
        display: flex;
        gap: 30px;
        padding: 20px;
        background-color: #121212;
        color: #ffffff;
        min-height: 100vh;
    }

    .library-page .library-content-area {
        flex-grow: 1;
        max-width: 100%;
    }

    .library-page .tab-navigation {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        border-bottom: 1px solid #333;
    }

    .library-page .tab-button {
        background: none;
        border: none;
        color: #999;
        font-size: 1.1em;
        padding: 10px 0;
        cursor: pointer;
        transition: color 0.2s, border-bottom 0.2s;
    }

    .library-page .tab-button.active {
        color: #fff;
        border-bottom: 2px solid #1db954;
    }

    .library-page .search-bar-container {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 15px 0;
    }

    .library-page .search-bar-container .bi-search {
        color: #b3b3b3;
        font-size: 1.2em;
    }

    .library-page .search-input {
        background: #ffffff;
        border: none;
        border-radius: 20px;
        color: #000;
        padding: 10px 18px;
        font-size: 1em;
        outline: none;
        width: 250px;
    }

    .library-page .sections-wrapper {
        position: relative;
        min-height: 250px;
        overflow: hidden;
    }

    .library-page .section-panel {
        opacity: 0;
        visibility: hidden;
        transform: translateX(30px);
        transition: opacity 0.4s ease, transform 0.4s ease, visibility 0.4s ease;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
    }

    .library-page .section-panel.active {
        opacity: 1;
        visibility: visible;
        transform: translateX(0);
    }

    .library-page .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    .library-page .library-card {
        background-color: #181818;
        border-radius: 8px;
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        text-align: left;
        transition: background-color 0.3s ease-in-out;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .library-page .library-card:hover {
        background-color: #282828;
    }

    .library-page .card-title {
        font-size: 1.1em;
        font-weight: bold;
        margin: 0;
        color: #ffffff;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;
    }

    .library-page .card-subtitle {
        font-size: 0.9em;
        color: #b3b3b3;
        margin-top: 4px;
    }

    .library-page .artist-card .card-image {
        border-radius: 50%;
    }
</style>

@code {
    private string ActiveSection { get; set; } = "playlists";

    private void SetActiveSection(string section)
    {
        ActiveSection = section;
    }
}