             @bind:event="oninput"
      @onkeyup="OnSearchKeyUp" />
          </div>
     </div>

    <!-- Song Table -->
        <div class="song-table">
   <div class="song-table-header">
            <div class="col-check"></div>
      <div class="col-title">TITLE</div>
 <div class="col-album">ALBUM</div>
        <div class="col-duration">
