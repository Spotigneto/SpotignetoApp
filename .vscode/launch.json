    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "prelaunch-backend",
            "postDebugTask": "kill-backend-ports",
            "program": "${workspaceFolder}\\Backend\\bin\\Debug\\net9.0\\Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}\\Backend",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5232;https://localhost:7089"
            }
        },
        {
            "name": "Frontend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "prelaunch-frontend",
            "postDebugTask": "kill-frontend-ports",
            "program": "${workspaceFolder}\\Frontend\\bin\\Debug\\net9.0\\Frontend.dll",
            "args": [],
            "cwd": "${workspaceFolder}\\Frontend",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5001;https://localhost:7007"
            }
        }
    ],
    "compounds": [
        {
            "name": "Start Backend & Frontend",
            "configurations": ["Backend", "Frontend"]
        }
    ]
}